<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_go_back"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_back"
            android:layout_gravity="center" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bike"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/kawasaki_h2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            >

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_bike_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Bike Name"
            android:textSize="24dp"
            android:gravity="center"></TextView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">
            <TextView
                android:id="@+id/tv_horsePower"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:text="HorsePower"
                android:textSize="25sp"
                android:textStyle="bold"
                android:src="@color/colorPrimary"/>

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_torque"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:text="Torque"
                android:textSize="25sp"
                android:src="@color/colorPrimary"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_weight"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:text="Weight"
                android:textSize="25sp"
                android:src="@color/colorPrimary"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_displacement"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:text="Displacement"
                android:textSize="25sp"
                android:src="@color/colorPrimary"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_tankVolume"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:text="TankVolume"
                android:textSize="25sp"
                android:src="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_attribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_value_horsePower"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="value"
                android:textSize="25sp">

            </TextView>

            <TextView
                android:id="@+id/tv_value_torque"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="value"
                android:textSize="25sp">

            </TextView>

            <TextView
                android:id="@+id/tv_value_weight"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="value"
                android:textSize="25sp">

            </TextView>

            <TextView
                android:id="@+id/tv_value_displacement"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="value"
                android:textSize="25sp">

            </TextView>

            <TextView
                android:id="@+id/tv_value_tankVolume"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="value"
                android:textSize="25sp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:text="HP"
                android:textSize="25sp"
                android:src="@color/colorPrimary"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:text="NM"
                android:textSize="25sp"
                android:src="@color/colorPrimary"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:text="KG"
                android:textSize="25sp"
                android:src="@color/colorPrimary"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:text="CC"
                android:textSize="25sp"
                android:src="@color/colorPrimary"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:text="L"
                android:textSize="25sp"
                android:src="@color/colorPrimary"/>
        </LinearLayout>



    </LinearLayout>


</LinearLayout>